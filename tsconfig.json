{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "pretty": true,
    "outDir": "./dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["src/*"]
    },
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "exclude": ["node_modules", "public", "dist"]
}
